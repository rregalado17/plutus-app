<%= render 'layouts/errors', obj: @category %>

<h1 class="text-center mt-4">Create a new Category</h1>

<div class='container'>

<%= form_with(model: @category, local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :name, class:"col-2 col-form-label" %>
    <div class='col-10'>        
        <%= f.text_field :name, class: "form-control" %>
    </div>
    </div> 

    <div class="form-group row">
        <%= f.submit  class:'btn btn-outline-light btn-lg' %>
    </div>
    

    <%= link_to 'All Stocks', stocks_path %>
<% end %>
</div>
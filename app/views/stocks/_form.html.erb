<div class='container'>

<% if @stock.errors.any? %>
    <h2>The following erros prevented creating the new stock:</h2>
    <ul>
    <% @stock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with(model: @stock, local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :name, class:"col-2 col-form-label" %>
    <div class='col-10'>        
        <%= f.text_field :name, class: "form-control" %>
    </div>
    </div> 

    <div class="form-group row">
        <%= f.label :description, class:"col-2 col-form-label" %>
    <div class='col-10'>
        <%= f.text_area :description, rows: 10, class: "form-control" %>
    </div>
    </div>

    <div class="form-group row">
        <%= f.submit class:'btn btn-outline-light btn-lg' %>
    </div>

    <%= link_to 'All Stocks', stocks_path %>
<% end %>
</div>